<h1>Update Owner</h1>

<form  action="/owners/<%= @owner.id %>" method="post">

    <label>Name:</label>

    <br>

    <input id="owner_name" type="text" name="owner[name]" value="<%= @owner.name %>">

    <br>

    <label>Choose an existing pet:</label>

    <br>

    <% @pets.each do |pet| %>
      <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id%>" <%= 'checked' if @owner.pets.include?(pet) %>><%= pet.name %>
    <% end %>

    <br>

    <label>and/or, create a new pet:</label>

    <br>

    <label>name:</label>
      <input type="text" name="pet[name]" id="pet_name">

    <br>
    <input type="submit" value="Update Owner">
</form>
