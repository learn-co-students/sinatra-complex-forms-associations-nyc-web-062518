<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Name: </label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">

  <br></br>

  <label>choose from an existing owner:</label>

  <br></br>

  <% @owners.each do |owner| %>
  <input type="radio" name="owner[id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if owner.pets.include?(@pet) %>><%= owner.name %></input>
  <% end %>

  <br></br>

  <label>and/or, create a new owner: </label>

  <br></br>

  <input type="text" name="owner[name]" id="owner_name">

  <br></br>

  <input type="submit" name="submit" id="submit" value="Update Pet">

</form>
