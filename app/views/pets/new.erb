<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name: </label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name">

  <br></br>

  <label>Choose and exiting owner: </label>

  <br></br>

  <% @owners.each do |owner| %>
    <input type="checkbox" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>"><%= owner.name %></input>
  <% end %>

  <br></br>

  <label>and/or, create a new owner:</label>

  <br></br>

  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]" id="owner_name">

  <br></br>

  <input type="submit" name="submit" id="submit" value="Create Pet">

</form>
