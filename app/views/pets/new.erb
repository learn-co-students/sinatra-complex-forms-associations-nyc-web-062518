<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <label>Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name">

  <br>

  <p>Choose an existing owner:</p>

  <%@owners.each do |owner|%>
    <input type="checkbox" name="owner_id" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>

  <br>

  <p>or create a new owner:</p>
  <label>Name:</label>

  <input type="text" name="owner[name]" id="owner_name">

  <br><br>

  <input type="submit" value="Create Pet">
</form>
